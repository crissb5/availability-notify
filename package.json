{
  "name": "availability-notify",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vtex/prettier-config": "^1.0.0",
    "eslint": "^7.4.0",
    "eslint-config-vtex": "^14.1.2",
    "eslint-config-vtex-react": "^8.2.1",
    "husky": "4.2.3",
    "lint-staged": "^12.2.1",
    "prettier": "^2.5.1",
    "typescript": "3.8.3"
  }
}
